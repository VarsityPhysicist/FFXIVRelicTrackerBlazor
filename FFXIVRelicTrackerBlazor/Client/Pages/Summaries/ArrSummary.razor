                }
            }
        </tr>
        <tr>
            <td>Zeta</td>
            @foreach (var job in TargetExpansion.Jobs)
            {
                @if (job.JobName != FFXIVRelicTrackerBlazor.Shared.Helpers.JobName.NA)
                {
                    <td><button @onclick="()=>ToggleComplete(7,job.JobName)">@job.Stages[7].Progress</button></td>
                }
            }
        </tr>
    </table>
}

<style>
    table{
        text-align:center;
    }
    table tr:first-child{
        padding-inline:33px;
    }
    td{
