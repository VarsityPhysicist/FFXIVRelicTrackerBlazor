@namespace FFXIVRelicTrackerBlazor.Client.Pages.Summaries
@page "/ArrSummary"
@inherits ArrSummaryBase

<h3>ARR Summary: @character.Name</h3>

@if (showAll)
{
    <table>
        <tr>
            <td></td>
            @foreach (var jobName in ValidJobs)
            {
                @if (jobName != FFXIVRelicTrackerBlazor.Shared.Helpers.JobName.NA)
                {
                    <td>@jobName.ToString()</td>
                }
            }
        </tr>
        <tr>
            <td>Relic</td>
            @foreach (var job in TargetExpansion.Jobs)
            {
                @if (job.JobName != FFXIVRelicTrackerBlazor.Shared.Helpers.JobName.NA)
                {
                    <td><button @onclick="()=>ToggleComplete(0,job.JobName)">@job.Stages[0].Progress</button></td>
                }
            }
        </tr>
        <tr>
            <td>Zenith</td>
            @foreach (var job in TargetExpansion.Jobs)
            {
                @if (job.JobName != FFXIVRelicTrackerBlazor.Shared.Helpers.JobName.NA)
