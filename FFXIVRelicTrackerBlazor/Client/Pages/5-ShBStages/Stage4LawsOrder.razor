@namespace FFXIVRelicTrackerBlazor.Client.Pages._5_ShBStages
@page "/ShBStage4"
@inherits Stage4LawsOrderBase


@if (showAll)
{
    <div class="stack-vertical">
        <div class="stack-vertical">
            <h2>Shadowbringers: Law's Order</h2>
            <div>@character.Name</div>
            <div class="stack-horizontal">
                <span>Selected Job: </span>
                <select value="@GetActiveJob" @onchange="SetActiveJob">
                    @foreach (var job in JobNames)
                    {
                        <option value="@job">@job</option>
                    }
                </select>
                <button @onclick="()=>CompleteStage()" disabled="@JobNotSelected">Complete</button>
            </div>
            <br />
        </div>
        <div />
        <br />
        <div class="stack-vertical">
            <h3>Requirements</h3>
            <ul>
                <li><span>Resistance Rank 10</span></li>
                <li><span>Complete Castrum Lactus Litore</span></li>
                <li><span>Complete Delubrum Reginae</span></li>
            </ul>
        </div>
        <br />
        <span><a href="https://ffxiv.gamerescape.com/wiki/Change_of_Arms" target="_blank" rel="noopener noreferrer">Quest: Change of Arms</a> | Started by: Zlatan (Gangos)</span>
        <span>With your <span class="weapon-purple">@PreviousWeaponName</span> equipped or in inventory and the quest "Change of Arms" active, complete the following content to recieve <a href="https://ffxiv.gamerescape.com/wiki/Loathsome_Memory_of_the_Dying" target="_blank" rel="noopener noreferrer" class="item-link">Loathsome Memories of the Dying</a></span>
        <ul>
            <li><span>Clear Castrum Lactus Litore</span><br /><span>Note: Guaranteed drop, awards 5</span></li>
            <li><span>Clear A Realm Reborn Alliance Raids</span><br /><span>Note: Guaranteed drop, awards 1</span></li>
            <li><span>Complete Critical Engagements in Bozjan Southern Front</span><br /><span>Note: Chance drop, awards 1</span></li>
        </ul>
        <br />
        <span>15 <a href="https://ffxiv.gamerescape.com/wiki/Loathsome_Memory_of_the_Dying" target="_blank" rel="noopener noreferrer" class="item-link">Loathsome Memories of the Dying</a> are required to recieve your <span class="weapon-purple">@WeaponName</span></span>
        <br />
        <table>
            <thead>
                <tr>
                    <td></td>
                    <td><span>Current:</span></td>
                    <td><span>Remaining:</span></td>
                </tr>
            </thead>
            <tr>
                <td><a href="https://ffxiv.gamerescape.com/wiki/Loathsome_Memory_of_the_Dying" target="_blank" rel="noopener noreferrer" class="item-link">Loathsome Memory of the Dying</a></td>
                <td><input type="number" min="0" max="15*17" value="@GetLoathsomeMemory" @onchange="@SetLoathsomeMemory" /></td>
                <td><span>@RemainingLoathsomeMemory()</span></td>
            </tr>
        </table>

    </div>
}

