@namespace FFXIVRelicTrackerBlazor.Client.Pages._5_ShBStages
@page "/ShBStage3"
@inherits Stage3RecollectionBase


@if (showAll)
{
    <div class="stack-vertical">
        <div class="stack-vertical">
            <h2>Shadowbringers: Augmented Resistance</h2>
            <div>@character.Name</div>
            <div class="stack-horizontal">
                <span>Selected Job: </span>
                <select value="@GetActiveJob" @onchange="SetActiveJob">
                    @foreach (var job in JobNames)
                    {
                        <option value="@job">@job</option>
                    }
                </select>
                <button @onclick="()=>CompleteStage()" disabled="@JobNotSelected">Complete</button>
            </div>
            <br />
        </div>
        <div />
        <br />
        <span><a href="https://ffxiv.gamerescape.com/wiki/The_Will_to_Resist" target="_blank" rel="noopener noreferrer">Quest: The Will to Resist</a> | Started by: Zlatan (Gangos)</span>
        <span>With your <span class="weapon-purple">@PreviousWeaponName</span> equipped or in inventory and the quest "The Will to Exist" active, complete the following content to recieve <a href="https://ffxiv.gamerescape.com/wiki/Bitter_Memory_of_the_Dying" target="_blank" rel="noopener noreferrer" class="item-link">Bitter Memories of the Dying</a></span>
        <ul>
            <li><span>Defeat enemies in Bozjan Southern Front</span><br /><span>Note: Low chance to drop Memories</span></li>
            <li><span>Complete Duty Roulette: Leveling</span><br /><span>Note: Guaranteed drop, only awarded once per day</span></li>
            <li><span>Complete lvl 60 Dungeons</span><br /><span>Note: Guaranteed drop, must be level synced</span></li>
        </ul>
        <br />
        <span>6 <a href="https://ffxiv.gamerescape.com/wiki/Bitter_Memory_of_the_Dying" target="_blank" rel="noopener noreferrer" class="item-link">Bitter Memories of the Dying</a> are required to recieve your <span class="weapon-purple">@WeaponName</span></span>
        <br />
        <table>
            <thead>
                <tr>
                    <td></td>
                    <td><span>Current:</span></td>
                    <td><span>Remaining:</span></td>
                </tr>
            </thead>
            <tr>
                <td><a href="https://ffxiv.gamerescape.com/wiki/Bitter_Memory_of_the_Dying" target="_blank" rel="noopener noreferrer" class="item-link">Bitter Memory of the Dying</a></td>
                <td><input type="number" min="0" max="20*17" value="@GetBitterMemory" @onchange="@SetBitterMemory" /></td>
                <td><span>@RemainingBitterMemory()</span></td>
            </tr>
        </table>

    </div>
}

