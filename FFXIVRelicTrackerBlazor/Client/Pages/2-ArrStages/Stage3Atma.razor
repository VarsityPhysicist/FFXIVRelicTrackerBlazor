@namespace FFXIVRelicTrackerBlazor.Client.Pages._2_ArrStages
@page "/Stage3Atma"
@inherits Stage3AtmaBase


@if (showAll)
{
    <div class="stack-vertical">
        <div class="stack-vertical">
            <h2>A Realm Reborn: Atma</h2>
            <div>@character.Name</div>
            <div class="stack-horizontal">
                <span>Selected Job: </span>
                <select value="@GetActiveJob()" @onchange="SetActiveJob">
                    @foreach (var job in JobNames)
                    {
                        <option value="@job">@job</option>
                    }
                </select>
                <button @onclick="()=>CompleteStage()" disabled="@JobNotSelected">Complete</button>
            </div>
            <br />
            <div>
                <a href="https://ffxiv.gamerescape.com/wiki/Up_in_Arms" target="_blank" rel="noopener noreferrer">Quest: Up in Arms</a>
                | Started by: Gerolt (North Shroud)
            </div>
            <ul>
                <li>
                    <div>With your <span class="weapon-purple">@PreviousWeaponName</span> equipped, speak with Gerolt and then nearby Jalzahn to complete Up in Arms</div>
                </li>
                <li>
                    <div>Completing FATEs in specific zones with a Zenith weapon equipped has a chance of dropping an Atma Crystal</div>
                </li>
                <li>
                    <div>1 Atma crystal of each type is required to upgrade your <span class="weapon-purple">@PreviousWeaponName</span> to <span class="weapon-purple">@WeaponName</span></div>
                </li>
            </ul>
            <div>Atmas and corresponding zones are as follows:</div>
            <table>
                <thead>
                    <tr>
                        <th>Atma:</th>
                        <th>Zone:</th>
                        <th>Acquired:</th>
                        <th>Remaining:</th>
                    </tr>
                </thead>
                <tr>
                    <td>Atma of the Lion</td>
                    <td>Outer La Noscea</td>
                    <td><input type="number" min="0" max="@RemainingJobs" value="@GetLionCount()" @onchange="SetLionCount" /></td>
                    <td>@LionRemaining</td>
                </tr>
                <tr>
                    <td>Atma of the Water-bearer</td>
                    <td>Upper La Noscea</td>
                    <td><input type="number" min="0" max="@RemainingJobs" value="@GetWaterBearerCount()" @onchange="SetWaterBearerCount" /></td>
                    <td>@WaterBearerRemaining</td>
                </tr>
                <tr>
                    <td>Atma of the Ram</td>
                    <td>Middle La Noscea</td>
                    <td><input type="number" min="0" max="@RemainingJobs" value="@GetRamCount()" @onchange="SetRamCount" /></td>
                    <td>@RamRemaining</td>
                </tr>
                <tr>
                    <td>Atma of the Crab</td>
                    <td>Western La Noscea</td>
                    <td><input type="number" min="0" max="@RemainingJobs" value="@GetCrabCount()" @onchange="SetCrabCount" /></td>
                    <td>@CrabRemaining</td>
                </tr>
                <tr>
                    <td>Atma of the Fish</td>
                    <td>Lower La Noscea</td>
                    <td><input type="number" min="0" max="@RemainingJobs" value="@GetFishCount()" @onchange="SetFishCount" /></td>
                    <td>@FishRemaining</td>
                </tr>
                <tr>
                    <td>Atma of the Bull</td>
                    <td>Eastern Thanalan</td>
                    <td><input type="number" min="0" max="@RemainingJobs" value="@GetBullCount()" @onchange="SetBullCount" /></td>
                    <td>@BullRemaining</td>
                </tr>
                <tr>
                    <td>Atma of the Scales</td>
                    <td>Central Thanalan</td>
                    <td><input type="number" min="0" max="@RemainingJobs" value="@GetScalesCount()" @onchange="SetScalesCount" /></td>
                    <td>@ScalesRemaining</td>
                </tr>
                <tr>
                    <td>Atma of the Twins</td>
                    <td>Western Thanalan</td>
                    <td><input type="number" min="0" max="@RemainingJobs" value="@GetTwinsCount()" @onchange="SetTwinsCount" /></td>
                    <td>@TwinsRemaining</td>
                </tr>
                <tr>
                    <td>Atma of the Scorpion</td>
                    <td>Southern Thanalan</td>
                    <td><input type="number" min="0" max="@RemainingJobs" value="@GetScorpionCount()" @onchange="SetScorpionCount" /></td>
                    <td>@ScorpionRemaining</td>
                </tr>
                <tr>
                    <td>Atma of the Archer</td>
                    <td>North Shroud</td>
                    <td><input type="number" min="0" max="@RemainingJobs" value="@GetArcherCount()" @onchange="SetArcherCount" /></td>
                    <td>@ArcherRemaining</td>
                </tr>
                <tr>
                    <td>Atma of the Goat</td>
                    <td>East Shroud</td>
                    <td><input type="number" min="0" max="@RemainingJobs" value="@GetGoatCount()" @onchange="SetGoatCount" /></td>
                    <td>@GoatRemaining</td>
                </tr>
                <tr>
                    <td>Atma of the Maiden</td>
                    <td>Central Shroud</td>
                    <td><input type="number" min="0" max="@RemainingJobs" value="@GetMaidenCount()" @onchange="SetMaidenCount" /></td>
                    <td>@MaidenRemaining</td>
                </tr>
            </table>
            <div>Note: FATEs may be completed as any job as long as a Zenith weapon is equipped</div>
        </div>
    </div>



}
<style>
    input {
        text-align: center;
    }

    th {
        padding-left: 5px;
        padding-right: 5px;
        text-align: center;
    }

    td {
        padding-left: 5px;
        padding-right: 5px;
        text-align: center;
    }

    .inline {
        display: inline-block;
        vertical-align: middle;
    }

    .stack-vertical {
        display: flex;
        flex-direction: column;
        /* background-color: #34ace0;*/
        color: white;
        align-items: flex-start;
        justify-content: center;
    }

    .stack-horizontal {
        display: flex;
        flex-direction: row;
        gap: 20px;
        /*background-color: #227093;*/
        color: white;
        justify-content: left;
        align-items: center;
    }

    .img-overlay-wrap {
        position: relative;
        display: inline-block; /* shrinks container to image size */
        transition: transform 150ms ease-in-out;
    }

        .img-overlay-wrap img { /* optional, for responsiveness */
            display: block;
            max-width: 100%;
            height: auto;
        }

        .img-overlay-wrap svg {
            position: absolute;
            top: 0;
            left: 0;
        }
</style>
