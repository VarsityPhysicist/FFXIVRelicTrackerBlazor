@inject Blazored.LocalStorage.ILocalStorageService localStorage

<div class="top-row pl-4 navbar navbar-dark">
    <a class="navbar-brand" href="">FFXIVRelicTrackerBlazor</a>
    <button class="navbar-toggler" @onclick="ToggleNavMenu">
        <span class="navbar-toggler-icon"></span>
    </button>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <ul class="nav flex-column">
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="oi oi-list-rich" aria-hidden="true"></span> Home Page
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" style="white-space:nowrap" @onclick="()=>collapseArrMenu = !collapseArrMenu">
                <span class="oi oi-list-rich" aria-hidden="true"> A Realm Reborn</span>
            </NavLink>
            @if (collapseArrMenu)
            {
                <ul class="nav flex-column">
                    <li class="nav-item px-3">
                        <NavLink class="nav-link" href="ArrSummary">
                            <span class="oi oi-list-rich" aria-hidden="true"></span> ARR Summary
                        </NavLink>
                    </li>
                    <li class="nav-item px-3">
                        <NavLink class="nav-link" href="Stage1Relic">
                            <span class="oi oi-list-rich" aria-hidden="true"></span> Stage 1: Relic
                        </NavLink>
                    </li>
                    <li class="nav-item px-3">
                        <NavLink class="nav-link" href="Stage2Zenith">
                            <span class="oi oi-list-rich" aria-hidden="true"></span> Stage 2: Zenith
                        </NavLink>
                    </li>
                    <li class="nav-item px-3">
                        <NavLink class="nav-link" href="Stage3Atma">
                            <span class="oi oi-list-rich" aria-hidden="true"></span> Stage 3: Atma
                        </NavLink>
                    </li>
                    <li class="nav-item px-3">
                        <NavLink class="nav-link" href="Stage4Animus">
                            <span class="oi oi-list-rich" aria-hidden="true"></span> Stage 4: Animus
                        </NavLink>
                    </li>
                    <li class="nav-item px-3">
                        <NavLink class="nav-link" href="Stage5Novus">
                            <span class="oi oi-list-rich" aria-hidden="true"></span> Stage 5: Novus
                        </NavLink>
                    </li>
                    <li class="nav-item px-3">
                        <NavLink class="nav-link" href="Stage6Nexus">
                            <span class="oi oi-list-rich" aria-hidden="true"></span> Stage 6: Nexus
                        </NavLink>
                    </li>
                    <li class="nav-item px-3">
                        <NavLink class="nav-link" href="Stage7Braves">
                            <span class="oi oi-list-rich" aria-hidden="true"></span> Stage 7: Braves
                        </NavLink>
                    </li>
                    <li class="nav-item px-3">
                        <NavLink class="nav-link" href="Stage8Zeta">
                            <span class="oi oi-list-rich" aria-hidden="true"></span> Stage 8: Zeta
                        </NavLink>
                    </li>
                </ul>
            }

        </li>
        
    </ul>
</div>

@code {
    private bool collapseNavMenu = true;

    private string NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }

    private bool collapseArrMenu;
    public string ArrMenuCollapse
    {
        get
        {
            if (collapseArrMenu)
                return "collapse";
            return "visible";
        }
    }
    private void ToggleMenu(bool expansion)
    {
        expansion = !expansion;
    }
}
